<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hospitalmanagementsystem.ExportReportController">
    <children>
        <VBox spacing="20" stylesheets="@../design/MainFormDesign.css" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" styleClass="header-1" stylesheets="@../design/MainFormDesign.css" text="Export Report" />
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Report Type:" />
                <ComboBox fx:id="reportTypeCombo" prefWidth="200" stylesheets="@../design/MainFormDesign.css">
               <styleClass>
                  <String fx:value="white-bg" />
                  <String fx:value="radius" />
                  <String fx:value="shadow" />
               </styleClass></ComboBox>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Date Range:" />
                <DatePicker fx:id="startDate" promptText="Start Date" stylesheets="@../design/MainFormDesign.css">
               <styleClass>
                  <String fx:value="white-bg" />
                  <String fx:value="shadow" />
                  <String fx:value="radius" />
               </styleClass></DatePicker>
                <DatePicker fx:id="endDate" promptText="End Date" stylesheets="@../design/MainFormDesign.css">
               <styleClass>
                  <String fx:value="white-bg" />
                  <String fx:value="shadow" />
                  <String fx:value="radius" />
               </styleClass></DatePicker>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Export Format:" />
                <RadioButton fx:id="pdfRadio" selected="true" text="PDF">
                    <toggleGroup>
                        <ToggleGroup fx:id="exportFormat" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="excelRadio" text="Excel" toggleGroup="$exportFormat" />
                <RadioButton fx:id="csvRadio" text="CSV" toggleGroup="$exportFormat" />
            </HBox>
            
            <TableView fx:id="previewTable" VBox.vgrow="ALWAYS">
                <columns>
                    <!-- Columns will be added dynamically -->
                </columns>
            </TableView>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="previewButton" onAction="#handlePreview" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Preview" />
                <Button fx:id="exportButton" onAction="#handleExport" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Export" />
            </HBox>
            
            <Label fx:id="messageLabel" wrapText="true" />
        </VBox>
    </children>
</AnchorPane>
