<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hospitalmanagementsystem.ExportReportController">
    <children>
        <VBox spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <Label text="Export Report" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Report Type:"/>
                <ComboBox fx:id="reportTypeCombo" prefWidth="200"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Date Range:"/>
                <DatePicker fx:id="startDate" promptText="Start Date"/>
                <DatePicker fx:id="endDate" promptText="End Date"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Export Format:"/>
                <RadioButton fx:id="pdfRadio" text="PDF" selected="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="exportFormat"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="excelRadio" text="Excel" toggleGroup="$exportFormat"/>
                <RadioButton fx:id="csvRadio" text="CSV" toggleGroup="$exportFormat"/>
            </HBox>
            
            <TableView fx:id="previewTable" VBox.vgrow="ALWAYS">
                <columns>
                    <!-- Columns will be added dynamically -->
                </columns>
            </TableView>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="previewButton" text="Preview" onAction="#handlePreview"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="exportButton" text="Export" onAction="#handleExport"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>
            
            <Label fx:id="messageLabel" wrapText="true"/>
        </VBox>
    </children>
</AnchorPane> 